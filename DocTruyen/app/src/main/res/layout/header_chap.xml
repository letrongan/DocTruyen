    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/k"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="6">

            <ImageView
                android:id="@+id/headerImgThumb"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:background="@drawable/background"
                android:scaleType="centerCrop" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/headerTenTruyen"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/tentruyen"
            android:gravity="center"
            android:maxLines="1"
            android:scrollbars="horizontal"
            android:text="Ỷ Thiên Đồ Long Ký"
            android:textSize="20dp" />

        <WebView
            android:id="@+id/headerWebDescrible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/read">

        </WebView>
    </LinearLayout>


    <!--</LinearLayout>-->

    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>